<div class="form-body">
    <form class="form" action="#">
        <div class="form-item">
            <label for="name" class="form-title">担当者名</label>
            <div class="form-input-wrapper">
                <input type="text" id="name" name="name">
            </div>
        </div>
        <div class="form-item">
            <label for="tel" class="form-title">電話番号</label>
            <div class="form-input-wrapper">
                <input type="tel" id="tel" name="tel">
            </div>
        </div>
        <div class="form-item">
            <label for="email" class="form-title">メールアドレス</label>
            <div class="form-input-wrapper">
                <input type="email" id="email" name="email">
            </div>
        </div>
        <div class="form-item">
            <label for="comment" class="form-title">お問い合わせ内容</label>
            <div class="form-textarea-wrapper">
                <textarea name="comment" id="comment"></textarea>
            </div>
        </div>

        <div class="form-btn">
            <button type="submit" class="btn btn--submit">送信</button>
        </div>
    </form>
</div>